{
  "manifest_version": 2,
  "name": "RF Checker",
  "version": "1.0.0",
  "description": "Перевірка контенту на наявність російської пропаганди",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}